{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "bulma": "^0.7.1",
    "classnames": "^2.2.6",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "recharts": "^1.0.0-beta.10",
    "standard": "^11.0.1",
    "validator": "^10.4.0"
  },
  "scripts": {
    "start": "npm-run-all -p start-css start-js",
    "start-js": "react-scripts start",
    "start-css": "npm run build-css && node-sass-chokidar ./src/styles/index.scss ./src/styles/index.css --include-path ./src/styles --watch --recursive",
    "build": "npm-run-all build-css build-js",
    "build-js": "react-scripts build",
    "build-css": "node-sass-chokidar ./src/styles/index.scss ./src/styles/index.css --include-path ./src/styles",
    "lint": "npm-run-all -s lint-css lint-js",
    "lint-js": "node_modules/.bin/standard --fix",
    "lint-css": "node_modules/.bin/stylelint --fix \"**/*.scss\"",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "immutability-helper": "^2.7.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "react-testing-library": "^5.0.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.2.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
